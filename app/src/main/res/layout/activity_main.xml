<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.lwjfork.widget.GestureLockViewIndicator
        android:id="@+id/lock_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:columnNums="3"
        app:errorDrawable="@drawable/ic_gestures_mini_nor"
        app:normalDrawable="@drawable/ic_gestures_mini_nor"
        app:rowNums="3"
        app:selectDrawable="@drawable/ic_gestures_mini_foc"
        app:spaceH="10dp"
        app:spaceV="10dp" />


    <com.lwjfork.widget.GestureLockView
        android:id="@+id/gesture_lock_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        app:autoSelectMiddle="true"
        app:columnNums="3"
        app:delayClearTime="1000"
        app:dotHeight="50dp"
        app:dotWidth="50dp"
        app:errorDrawable="@drawable/ic_gestures_error"
        app:lineColor="@android:color/black"
        app:lineErrorColor="@android:color/holo_red_dark"
        app:lineWidth="3dp"
        app:normalDrawable="@drawable/ic_gestures_nor"
        app:rowNums="3"
        app:selectDrawable="@drawable/ic_gestures_sel"
        app:spaceH="60dp"
        app:spaceV="60dp" />


</LinearLayout>